<h1>All tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, task_path(task), method: :delete, data: { confirm: "delete #{task.title}?" } %>
    </li>
  <% end %>
</ul>
<p> <%= link_to 'new', new_task_path %></p>
